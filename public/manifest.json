{
  "manifest_version": 3,
  "name": "LinkedIn Cover Letter Generator",
  "description": "Automatically generate personalized cover letters for LinkedIn job applications",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons8-job-application-arcade-16.png",
      "32": "icons8-job-application-arcade-32.png",
      "48": "icons8-job-application-arcade-32.png",
      "128": "icons8-job-application-arcade-96.png"
    }
  },
  "icons": {
    "16": "icons8-job-application-arcade-16.png",
    "32": "icons8-job-application-arcade-32.png",
    "48": "icons8-job-application-arcade-32.png",
    "128": "icons8-job-application-arcade-96.png"
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://*.linkedin.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
